<% if current_user.nil? %>
  <div class="container-fluid">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to t("fels"), "#", class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t("contact"), "#" %></li>
            <% if logged_in? %>
              <% if current_user.admin? %>
                <li><%= link_to t("users"), users_path %></li>
              <% end %>
              <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
              <li><%= link_to t("logout"), logout_path, method: "delete" %></li>
            <% else %>
              <li><%= link_to t("login"), login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
<% else %>
  <% if current_user.admin? %>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to t("admin"), "#", class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t("logout"), logout_path,
              method: "delete", class: "btn btn-default btn-outline btn-circle" %></li>
          </ul>
        </div>
      </div>
    </nav>
  <% else %>
    <div class="container-fluid">
      <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <%= link_to t("fels"), user_path(current_user), class: "navbar-brand" %>
          </div>
          <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to t("contact"), "#" %></li>
              <% if logged_in? %>
                  <% if current_user.admin? %>
                      <li><%= link_to t("users"), users_path %></li>
                  <% end %>
                  <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
                  <li><%= link_to t("logout"), logout_path, method: "delete" %></li>
              <% else %>
                  <li><%= link_to t("login"), login_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  <% end %>
<% end %>
